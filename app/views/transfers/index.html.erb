<div class="row wrapper border-bottom white-bg page-heading">
  <% content_for :title, "Transfers - Inventory - #{current_organization.name}" %>
  <div class="col-lg-8">
    <h2>Inventory Transfers <%= current_organization.name %></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to(dashboard_path) do %>
          <i class="fa fa-dashboard"></i> Home
        <% end %>
      </li>
      <li class="breadcrumb-item active">
        <a href="#">Transfers</a>
      </li>
    </ol>
  </div>
  <div class="col-lg-4">
    <div class="title-action">
      <%= download_button_to(csv_path(format: :csv, type: "Transfer"),
        { text: "Export Transfers", size: "lg" }) if @transfers.any? %>
      <%= new_button_to new_transfer_path(organization_id: current_organization),
        { text: "New Transfer" } %>
    </div>
  </div>
</div>
<section class="content">
  <div class="box">
    <div class="row">
      <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
          <div class="ibox-content p-xl">
            <div class="box-header with-border bg-gray">
              <section id="filters">
                <%= form_tag(transfers_path, method: :get) do |f| %>
                  <div class="row">
                    <div class="form-group col-lg-3 col-md-4 col-sm-6 col-xs-12">
                      <%= label_tag "From this Storage Location" %>
                      <%= collection_select(:filters, :from_location, @from_storage_locations || {}, :id, :name, { include_blank: true, selected: (@selected_from) }, class: "form-control") %>
                    </div>
                    <div class="form-group col-lg-3 col-md-4 col-sm-6 col-xs-12">
                      <%= label_tag "To this Storage Location" %>
                      <%= collection_select(:filters, :to_location, @to_storage_locations || {}, :id, :name, { include_blank: true, selected: (@selected_to) }, class: "form-control") %>
                    </div>
                    <div class="col-xs-12" style="margin-top:27px">
                      <%= filter_button %>
                      <%= cancel_button_to transfers_path, { text: "Clear Filters" } %>

                      <div class="pull-right"></div>
                    </div>
                  </div>
                <% end %>
              </section>
            </div>
            <div class="row">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>From</th>
                      <th>To</th>
                      <th>Comment</th>
                      <th>Total Moved</th>
                      <th>&nbsp;</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render partial: "transfer_row", collection: @transfers %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
